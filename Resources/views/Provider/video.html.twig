<link href="http://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
<script src="http://vjs.zencdn.net/ie8/1.1.0/videojs-ie8.min.js"></script>
<script src="http://vjs.zencdn.net/5.0.2/video.js"></script>

{# calculo el alto escalado del v√≠deo #}
{% set width = 360 %}
{% set height = width * media.height / media.width %}

<video
        id="video-{{ media.id }}"
        class="video-js"
        controls
        preload="auto"
        width="auto" {# {{ width }} #}
        height="auto" {# {{ height }} #}
        poster="/uploads/media/{{ options.thumbnail.getKey() }}" data-setup="{}">

    {% if media.providerMetadata.mp4_available is defined %}
        <source src="{{ options.video_mp4 }}" type="video/mp4">
    {% endif %}
    {% if media.providerMetadata.ogg_available is defined %}
        <source src="{{ options.video_ogg }}" type="video/ogg">
    {% endif %}
    {% if media.providerMetadata.webm_available is defined %}
        <source src="{{ options.video_webm }}" type="video/webm">
    {% endif %}
    <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
    </p>
</video>